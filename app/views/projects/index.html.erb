<% if is_admin? %>
  <a href="/projects/new">Add a project</a>
<% end %>
<div class="container">
  <div class="portfolio-list">
    <ul>
      <% @projects.each do |item| %>
        <li>
          <% if item.image != '' %>
            <img class="portfolio-sample" src="/img/projects/<%= item.image %>">
          <% end %>

          <h3><a href="<%= item.link %>"><%= item.title %></a> <%= item.order_id %></h3>

          <p><%= item.description %></p>

          <div class="clr-both"></div>

          <% if is_admin? %>
            <a href="/projects/<%= item.id %>/edit">Edit</a>

            <a href="/projects/<%= item.order_id %>/moveup">Move Up</a>

            <a href="/projects/<%= item.order_id %>/movedown">Move Down</a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>